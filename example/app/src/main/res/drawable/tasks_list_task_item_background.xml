<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/task_item_background_stroke_width"
                android:color="@color/task_item_background_stroke" />
            <corners android:bottomLeftRadius="@dimen/task_item_background_corner" />
            <solid android:color="@color/task_item_background" />
        </shape>
    </item>
    <item>
        <inset
            android:insetLeft="@dimen/task_item_background_stroke_width"
            android:insetBottom="@dimen/task_item_background_stroke_width">
            <shape android:shape="rectangle">
                <solid android:color="@color/task_item_background" />
                <corners android:bottomLeftRadius="@dimen/task_item_background_corner" />
            </shape>
        </inset>
    </item>
</layer-list>
