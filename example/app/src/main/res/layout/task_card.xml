<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="state"
            type="com.github.asuslennikov.taskman.task.card.TaskCardState" />

        <variable
            name="viewModel"
            type="com.github.asuslennikov.taskman.task.card.TaskCardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/task_card_progress"
            android:layout_width="@dimen/task_card_icon_size"
            android:layout_height="@dimen/task_card_icon_size"
            android:layout_margin="@dimen/normal_margin"
            android:indeterminate="true"
            android:visibility="@{state.loading}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/task_card_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:gravity="center_horizontal"
            android:text="@string/task_card_loading"
            android:textSize="@dimen/header_text_size"
            android:visibility="@{state.loading}"
            app:layout_constraintEnd_toEndOf="@id/task_card_progress"
            app:layout_constraintStart_toStartOf="@id/task_card_progress"
            app:layout_constraintTop_toBottomOf="@id/task_card_progress"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/task_card_error_icon"
            android:layout_width="@dimen/task_card_icon_size"
            android:layout_height="@dimen/task_card_icon_size"
            android:layout_margin="@dimen/normal_margin"
            app:srcCompat="@drawable/ic_error"
            android:visibility="@{state.failed}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/task_card_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:gravity="center_horizontal"
            android:text="@string/task_card_error_text"
            android:textSize="@dimen/header_text_size"
            android:visibility="@{state.failed}"
            app:layout_constraintEnd_toEndOf="@id/task_card_progress"
            app:layout_constraintStart_toStartOf="@id/task_card_progress"
            app:layout_constraintTop_toBottomOf="@id/task_card_progress"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/task_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:text="@{state.title}"
            android:textSize="@dimen/header_text_size"
            android:visibility="@{state.completed}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Complete the example project" />

        <TextView
            android:id="@+id/task_card_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:text="@{state.description}"
            android:textSize="@dimen/normal_text_size"
            android:visibility="@{state.descriptionVisibility}"
            app:layout_constraintEnd_toEndOf="@id/task_card_title"
            app:layout_constraintStart_toStartOf="@id/task_card_title"
            app:layout_constraintTop_toBottomOf="@id/task_card_title"
            tools:text="Provide a workable and stable application, which uses the library" />

        <TextView
            android:id="@+id/task_card_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:text="@{@string/task_card_date(state.date)}"
            android:textSize="@dimen/normal_text_size"
            android:visibility="@{state.dateVisibility}"
            app:layout_constraintEnd_toEndOf="@id/task_card_description"
            app:layout_constraintStart_toStartOf="@id/task_card_description"
            app:layout_constraintTop_toBottomOf="@id/task_card_description"
            tools:text="Planned at: 01-01-1970" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/task_card_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:contentDescription="@string/task_card_edit_button_description"
            android:onClick="@{() -> viewModel.onEditTaskClick()}"
            android:visibility="@{state.completed}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_edit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>