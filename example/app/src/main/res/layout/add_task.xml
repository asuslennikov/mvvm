<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="state"
            type="com.github.asuslennikov.taskman.task.add.AddTaskState" />

        <variable
            name="viewModel"
            type="com.github.asuslennikov.taskman.task.add.AddTaskViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/add_task_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:text="@string/add_task_header"
            android:textSize="@dimen/header_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_task_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:hint="@string/add_task_title_label"
            app:endIconMode="clear_text"
            app:errorEnabled="false"
            app:layout_constraintStart_toStartOf="@id/add_task_header"
            app:layout_constraintTop_toBottomOf="@id/add_task_header">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="@{state.title}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_task_description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_marginTop="@dimen/one_and_half_margin"
            android:hint="@string/add_task_description_label"
            app:endIconMode="clear_text"
            app:errorEnabled="false"
            app:layout_constraintStart_toStartOf="@id/add_task_title_container"
            app:layout_constraintTop_toBottomOf="@id/add_task_title_container">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="@{state.description}" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/add_task_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_marginTop="@dimen/one_and_half_margin"
            android:text="@string/add_task_date_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_task_description_container" />

        <TextView
            android:id="@+id/add_task_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:onClick="@{() -> viewModel.onDateClicked()}"
            android:text="@{state.formattedDate}"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/add_task_date_label"
            app:layout_constraintTop_toTopOf="@id/add_task_date_label"
            tools:text="Today" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_task_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:contentDescription="@string/add_task_save_button_description"
            android:onClick="@{() -> viewModel.onSaveTaskClick()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_apply" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>